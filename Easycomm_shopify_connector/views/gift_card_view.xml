<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Gift Card List View -->
    <record id="view_shopify_gift_card_list" model="ir.ui.view">
        <field name="name">shopify.gift.card.list</field>
        <field name="model">shopify.gift.card</field>
        <field name="arch" type="xml">
            <list string="Shopify Gift Cards" decoration-success="status=='enabled'" decoration-muted="status=='disabled'" decoration-danger="status=='expired'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="initial_value" widget="monetary"/>
                <field name="balance" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="status" widget="badge" decoration-success="status=='enabled'" decoration-muted="status=='disabled'" decoration-danger="status=='expired'"/>
                <field name="expires_on"/>
                <field name="shopify_instance_id"/>
            </list>
        </field>
    </record>

    <!-- Gift Card Form View -->
    <record id="view_shopify_gift_card_form" model="ir.ui.view">
        <field name="name">shopify.gift.card.form</field>
        <field name="model">shopify.gift.card</field>
        <field name="arch" type="xml">
            <form string="Shopify Gift Card">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="enabled,disabled,expired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="last_characters" readonly="1" string="Last 4 Digits"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="shopify_instance_id"/>
                            <field name="shopify_gift_card_id" readonly="1"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="initial_value" widget="monetary"/>
                            <field name="balance" widget="monetary"/>
                            <field name="currency_id"/>
                            <field name="expires_on"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="note" nolabel="1"/>
                    </group>
                    <group string="Shopify Information">
                        <group>
                            <field name="shopify_created_at" readonly="1"/>
                        </group>
                        <group>
                            <field name="shopify_updated_at" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Gift Card Action -->
    <record id="action_shopify_gift_card" model="ir.actions.act_window">
        <field name="name">Gift Cards</field>
        <field name="res_model">shopify.gift.card</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No gift cards found
            </p>
            <p>
                Gift cards are automatically synced from Shopify when you import them.
            </p>
        </field>
    </record>
</odoo>
