<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inventory Location List View -->
    <record id="view_shopify_inventory_location_list" model="ir.ui.view">
        <field name="name">shopify.inventory.location.list</field>
        <field name="model">shopify.inventory.location</field>
        <field name="arch" type="xml">
            <list string="Shopify Inventory Locations">
                <field name="location_name"/>
                <field name="location_type"/>
                <field name="city"/>
                <field name="country"/>
                <field name="total_products" string="Products"/>
                <field name="total_quantity" string="Total Qty" sum="Total"/>
                <field name="active_location" widget="boolean_toggle"/>
                <field name="shopify_instance_id"/>
            </list>
        </field>
    </record>

    <!-- Inventory Location Form View -->
    <record id="view_shopify_inventory_location_form" model="ir.ui.view">
        <field name="name">shopify.inventory.location.form</field>
        <field name="model">shopify.inventory.location</field>
        <field name="arch" type="xml">
            <form string="Shopify Inventory Location">
                <header>
                    <button name="action_sync_inventory" type="object" string="Sync Inventory" class="oe_highlight"/>
                    <button name="action_sync_inventory_with_products" type="object" string="Sync &amp; Link Products" class="btn-secondary"
                            title="Sync inventory and attempt to link unlinked items to products"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-cubes">
                            <field name="total_products" widget="statinfo" string="Products"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-archive">
                            <field name="total_quantity" widget="statinfo" string="Total Qty"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="location_name" placeholder="Location Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="shopify_instance_id"/>
                            <field name="shopify_location_id" readonly="1"/>
                            <field name="location_type"/>
                            <field name="active_location"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="province"/>
                            <field name="country"/>
                            <field name="zip_code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Inventory" name="inventory">
                            <div class="alert alert-info" role="alert" invisible="inventory_line_ids">
                                <strong>No inventory data!</strong> Click "Sync Inventory" button to load inventory from Shopify.
                            </div>
                            <div class="alert alert-warning" role="alert" invisible="not inventory_line_ids">
                                <strong>Tip:</strong> If some items show as "Unknown", sync your products first, then click "Sync &amp; Link Products" to link inventory items to products.
                            </div>
                            <field name="inventory_line_ids" nolabel="1">
                                <list editable="bottom" decoration-danger="available &lt;= 0" decoration-warning="available &lt; 10">
                                    <field name="product_name" string="Product"/>
                                    <field name="product_sku" string="SKU"/>
                                    <field name="product_id" optional="hide"/>
                                    <field name="product_variant_id" optional="hide"/>
                                    <field name="available" string="Available Qty" sum="Total"/>
                                    <field name="inventory_item_id" optional="hide"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Inventory Location Action -->
    <record id="action_shopify_inventory_location" model="ir.actions.act_window">
        <field name="name">Location-wise Inventory</field>
        <field name="res_model">shopify.inventory.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No inventory locations found
            </p>
            <p>
                Sync Shopify locations to view inventory by location.
            </p>
        </field>
    </record>
</odoo>
