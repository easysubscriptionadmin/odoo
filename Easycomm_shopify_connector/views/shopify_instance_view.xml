<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shopify Instance Form View -->
    <record id="view_shopify_instance_form" model="ir.ui.view">
        <field name="name">shopify.instance.form</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <form string="Shopify Instance">
                <header>
                    <button name="test_connection" type="object" string="Test Connection" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="shop_url"/>
                            <field name="api_version"/>
                            <field name="active"/>
                            <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="api_key"/>
                            <field name="api_secret" password="True"/>
                            <field name="access_token" password="True"/>
                        </group>
                    </group>
                    <group string="Last Sync Information">
                        <group>
                            <field name="last_product_sync"/>
                            <field name="last_customer_sync"/>
                        </group>
                        <group>
                            <field name="last_order_sync"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Shopify Instance List View -->
    <record id="view_shopify_instance_list" model="ir.ui.view">
        <field name="name">shopify.instance.list</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <list string="Shopify Instances">
                <field name="name"/>
                <field name="shop_url"/>
                <field name="currency_id" optional="show"/>
                <field name="api_version"/>
                <field name="last_product_sync"/>
                <field name="last_customer_sync"/>
                <field name="last_order_sync"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Shopify Instance Search View -->
    <record id="view_shopify_instance_search" model="ir.ui.view">
        <field name="name">shopify.instance.search</field>
        <field name="model">shopify.instance</field>
        <field name="arch" type="xml">
            <search string="Shopify Instances">
                <field name="name"/>
                <field name="shop_url"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Shopify Instance Action -->
    <record id="action_shopify_instance" model="ir.actions.act_window">
        <field name="name">Shopify Instances</field>
        <field name="res_model">shopify.instance</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Shopify Instance
            </p>
            <p>
                Connect your Shopify store to Odoo by creating an instance with your API credentials.
            </p>
        </field>
    </record>

</odoo>
