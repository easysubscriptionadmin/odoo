<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sync Log List View -->
    <record id="view_shopify_sync_log_list" model="ir.ui.view">
        <field name="name">shopify.sync.log.list</field>
        <field name="model">shopify.sync.log</field>
        <field name="arch" type="xml">
            <list string="Sync Logs" decoration-success="status=='success'" decoration-danger="status=='failed'" decoration-warning="status=='partial'">
                <field name="name"/>
                <field name="shopify_instance_id"/>
                <field name="sync_type"/>
                <field name="direction"/>
                <field name="status" widget="badge" decoration-success="status=='success'" decoration-danger="status=='failed'" decoration-warning="status=='partial'"/>
                <field name="created_count"/>
                <field name="updated_count"/>
                <field name="failed_count"/>
                <field name="duration"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Sync Log Form View -->
    <record id="view_shopify_sync_log_form" model="ir.ui.view">
        <field name="name">shopify.sync.log.form</field>
        <field name="model">shopify.sync.log</field>
        <field name="arch" type="xml">
            <form string="Sync Log">
                <header>
                    <button name="action_retry" type="object" string="Retry" class="oe_highlight" invisible="status != 'failed'"/>
                    <field name="status" widget="statusbar" statusbar_visible="success,failed,partial"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="shopify_instance_id"/>
                            <field name="sync_type"/>
                            <field name="direction"/>
                        </group>
                        <group>
                            <field name="created_count"/>
                            <field name="updated_count"/>
                            <field name="failed_count"/>
                            <field name="duration"/>
                        </group>
                    </group>
                    <group string="Details">
                        <group>
                            <field name="record_model"/>
                            <field name="record_id"/>
                            <field name="shopify_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Message" name="message">
                            <field name="message" nolabel="1"/>
                        </page>
                        <page string="Error Details" name="error" invisible="status == 'success'">
                            <field name="error_details" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sync Log Action -->
    <record id="action_shopify_sync_log" model="ir.actions.act_window">
        <field name="name">Sync Logs</field>
        <field name="res_model">shopify.sync.log</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sync logs found
            </p>
            <p>
                Sync logs track all synchronization activities between Shopify and Odoo.
            </p>
        </field>
    </record>
</odoo>
