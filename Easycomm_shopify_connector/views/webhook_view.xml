<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Webhook List View -->
    <record id="view_shopify_webhook_list" model="ir.ui.view">
        <field name="name">shopify.webhook.list</field>
        <field name="model">shopify.webhook</field>
        <field name="arch" type="xml">
            <list string="Shopify Webhooks">
                <field name="name"/>
                <field name="shopify_instance_id"/>
                <field name="topic"/>
                <field name="webhook_url"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="shopify_webhook_id"/>
            </list>
        </field>
    </record>

    <!-- Webhook Form View -->
    <record id="view_shopify_webhook_form" model="ir.ui.view">
        <field name="name">shopify.webhook.form</field>
        <field name="model">shopify.webhook</field>
        <field name="arch" type="xml">
            <form string="Shopify Webhook">
                <header>
                    <button name="create_webhook_in_shopify" type="object" string="Create in Shopify"
                            class="oe_highlight" invisible="shopify_webhook_id"/>
                    <button name="delete_webhook_from_shopify" type="object" string="Delete from Shopify"
                            confirm="Are you sure you want to delete this webhook from Shopify?"
                            invisible="not shopify_webhook_id"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="shopify_instance_id"/>
                            <field name="topic"/>
                        </group>
                        <group>
                            <field name="webhook_url"/>
                            <field name="format"/>
                            <field name="shopify_webhook_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Timestamps" invisible="not shopify_webhook_id">
                        <group>
                            <field name="created_at"/>
                        </group>
                        <group>
                            <field name="updated_at"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Webhook Action -->
    <record id="action_shopify_webhook" model="ir.actions.act_window">
        <field name="name">Webhooks</field>
        <field name="res_model">shopify.webhook</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first webhook
            </p>
            <p>
                Webhooks allow real-time synchronization between Shopify and Odoo.
                Configure webhooks to receive instant updates when products, orders, or customers change in Shopify.
            </p>
        </field>
    </record>
</odoo>
