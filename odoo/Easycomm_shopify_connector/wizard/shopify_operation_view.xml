<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shopify Operation Wizard Form View -->
    <record id="view_shopify_operation_form" model="ir.ui.view">
        <field name="name">shopify.operation.form</field>
        <field name="model">shopify.operation</field>
        <field name="arch" type="xml">
            <form string="Shopify Operations">
                <sheet>
                    <group>
                        <field name="shopify_instance_id"/>
                        <field name="shopify_operation"/>
                    </group>
                    <group string="Additional Options" invisible="shopify_operation not in ['import_orders', 'export_products', 'export_customers']">
                        <group invisible="shopify_operation != 'import_orders'">
                            <field name="import_orders_from_date"/>
                        </group>
                        <group invisible="shopify_operation != 'export_products'">
                            <field name="product_ids" widget="many2many_tags"/>
                        </group>
                        <group invisible="shopify_operation != 'export_customers'">
                            <field name="customer_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="perform_operation" type="object" string="Execute" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Shopify Operation Action -->
    <record id="action_shopify_operation" model="ir.actions.act_window">
        <field name="name">Shopify Operations</field>
        <field name="res_model">shopify.operation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_shopify_instance"/>
    </record>

</odoo>
