<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Discount Form View -->
    <record id="view_shopify_discount_form" model="ir.ui.view">
        <field name="name">shopify.discount.form</field>
        <field name="model">shopify.discount</field>
        <field name="arch" type="xml">
            <form string="Shopify Discount">
                <header>
                    <button name="action_sync_single" type="object" string="Sync from Shopify" class="oe_highlight"/>
                    <button name="action_view_products" type="object" string="View Products"
                            invisible="entitled_product_ids == False" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_products" type="object"
                                class="oe_stat_button" icon="fa-cube"
                                invisible="entitled_product_ids == False">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Products</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Inactive" bg_color="text-bg-danger"
                            invisible="active_discount == True"/>

                    <div class="oe_title">
                        <label for="name" string="Discount Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="shopify_instance_id"/>
                            <field name="discount_code" string="Code"/>
                            <field name="value_type"/>
                            <field name="value" widget="float"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="target_type"/>
                            <field name="target_selection"/>
                            <field name="allocation_method"/>
                            <field name="active_discount"/>
                        </group>
                    </group>

                    <group string="Usage Limits">
                        <group>
                            <field name="usage_limit"/>
                            <field name="usage_count"/>
                        </group>
                        <group>
                            <field name="once_per_customer"/>
                        </group>
                    </group>

                    <group string="Prerequisites">
                        <group>
                            <field name="prerequisite_subtotal_range" widget="monetary"/>
                        </group>
                        <group>
                            <field name="prerequisite_quantity_range"/>
                        </group>
                    </group>

                    <group string="Validity Period">
                        <group>
                            <field name="starts_at"/>
                        </group>
                        <group>
                            <field name="ends_at"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Product Details" name="products">
                            <group>
                                <field name="entitled_product_ids" widget="text"/>
                                <field name="entitled_collection_ids" widget="text"/>
                            </group>
                        </page>
                        <page string="Shopify Information" name="shopify_info">
                            <group>
                                <field name="shopify_price_rule_id"/>
                                <field name="shopify_created_at"/>
                                <field name="shopify_updated_at"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Discount List View -->
    <record id="view_shopify_discount_list" model="ir.ui.view">
        <field name="name">shopify.discount.list</field>
        <field name="model">shopify.discount</field>
        <field name="arch" type="xml">
            <list string="Shopify Discounts" decoration-muted="active_discount == False">
                <field name="name"/>
                <field name="discount_code"/>
                <field name="value_type"/>
                <field name="value"/>
                <field name="target_type"/>
                <field name="target_selection"/>
                <field name="usage_count"/>
                <field name="starts_at"/>
                <field name="ends_at"/>
                <field name="active_discount" widget="boolean_toggle"/>
                <field name="shopify_instance_id"/>
            </list>
        </field>
    </record>

    <!-- Discount Action -->
    <record id="action_shopify_discount" model="ir.actions.act_window">
        <field name="name">Discounts</field>
        <field name="res_model">shopify.discount</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No discounts found
            </p>
            <p>
                Sync discounts from Shopify to view discount codes, price rules, and their application details.
            </p>
        </field>
    </record>

</odoo>
